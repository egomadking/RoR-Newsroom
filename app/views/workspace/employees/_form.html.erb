<%= form_with model: [:workspace, @employee] do |f| %>

  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2 class="title is-5 has-text-danger">There were some errors:</h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "control" %>
  </div>
  <div class="field">
    <%= f.label :first_name, class: "label" %>
    <%= f.text_field :first_name, class: "control" %>
  </div>
  <div class="field">
    <%= f.label :last_name, class: "label" %>
    <%= f.text_field :last_name, class: "control" %>
  </div>
  <div class="field">
    <%= f.label :title, class: "label" %>
    <%= f.text_field :title, class: "control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "control" %>
  </div>
  
  <div class="is-grouped">
    <%= f.submit class: "button is-link" %>
    <% if @employee.id %>
      <%= link_to "Cancel", workspace_employee_path(@employee), class: "button is-link is-light" %>
    <% end %>
  </div>
<% end %>