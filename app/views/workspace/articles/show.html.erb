<h1 class="title"><%= @article.title %></h1>
<h2 class="title is-5">Status: <%= @article.status %></h2>
<% if @article.employee %>
  <h2 class="title is-5">Assigned to: <%= full_name(@article.employee) %></h2>
  <% else %>
  <h2>No author assigned</h2>
<% end %>
<div>
  <%= @article.content %>
</div>
<br>
<% if @article.editor_revisions %>
  <% @article.editor_revisions.each do |revision| %>
    <div>
      <h2 class="title is-5">Editorial Revision Comment:</h2>
      <h2 class="title is-6 is-italic">Left by: <%= full_name(revision.reviewer) %></h2>
      <div><%= revision.content %></div>
    </div>
    <hr>
  <% end %>
  
<% end %>
<%= link_to "Edit this article", edit_workspace_article_path(@article), class: "button is-link" %>
<%= link_to "Add Editor Revision", new_workspace_article_editor_revision_path(@article), class: "button is-link"%>