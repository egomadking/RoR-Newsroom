<h1 class="title"><%= @article.title %></h1>
<% if @article.employee %>
  <h2><%= @article.employee.first_name %></h2>
  <% else %>
  <h2>No author assigned</h2>
<% end %>
<div>
  <%= @article.content %>
</div>
<br>
<%= link_to "Edit this article", edit_workspace_article_path(@article), class: "button is-link" %>